@model List<Movie>
@{ 
    ViewBag.Title = "My Movies";
}

<header class="jumbotron">
    <h1>My Movies</h1>
</header>
<h2>Movie List</h2>
<a asp-controller="Movie" asp-action="Add">Add New Movie</a>

@if (!Model.Any()) 
{
    <div class="alert alert-info">
        No movies available. Please add a new movie.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Release Date</th>
            <th>Director</th>
            <th>Duration</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Rating</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
                <td>@movie.Director</td>
                <td>@movie.Duration</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit"
                       asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete"
                       asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}